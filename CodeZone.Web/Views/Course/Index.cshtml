@model IEnumerable<CodeZone.Core.DTOs.Courses.CourseResponse>

@{
    ViewData ["Title"] = "Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Courses List</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Course
    </a>
</div>

@if ( TempData ["SuccessMessage"] != null )
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <span>@(TempData ["SuccessMessage"])</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Course Title</th>
                    <th>Capacity</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if ( Model != null && Model.Any( ) )
                {
                    foreach ( var course in Model )
                    {
                        <tr>
                            <td class="fw-bold">@course.Title</td>
                            <td>
                                <span class="badge bg-info text-dark">
                                   @course.MaxCapacity
                                </span>
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    <button onclick="loadStudents(@course.Id, '@course.Title')"
                                            class="btn btn-sm btn-outline-info"
                                            data-bs-toggle="modal"
                                            data-bs-target="#studentsModal">
                                        <i class="bi bi-people-fill">Registered Students</i>
                                    </button>

                                    <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil-square">Edit</i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@course.Id" method="post" class="d-inline"
                                          onsubmit="return confirm('Are you sure?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash">Delete</i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            No courses available.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="studentsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="bi bi-people-fill me-2"></i> Students in <span id="courseNameTitle" class="fw-bold"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <ul id="studentsList" class="list-group list-group-flush">
                    <li class="list-group-item text-center py-4">
                        <div class="spinner-border text-info" role="status"></div>
                    </li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadStudents(courseId, courseTitle) {
            document.getElementById('courseNameTitle').innerText = courseTitle;
            var list = document.getElementById('studentsList');

            list.innerHTML = `
                <li class="list-group-item text-center py-4">
                    <div class="spinner-border text-info spinner-border-sm" role="status"></div>
                    <span class="ms-2 text-muted">Loading students...</span>
                </li>`;

            fetch(`/Course/GetStudents/${courseId}`)
                .then(response => {
                    if (!response.ok) throw new Error("Network error");
                    return response.json();
                })
                .then(data => {
                    list.innerHTML = '';

                    if (data.length === 0) {
                        list.innerHTML = `
                            <li class="list-group-item text-center text-muted py-4">
                                <i class="bi bi-info-circle fs-4 d-block mb-2"></i>
                                No students enrolled yet.
                            </li>`;
                    } else {
                        data.forEach(student => {
                            list.innerHTML += `
                                <li class="list-group-item">
                                    <i class="bi bi-person-check-fill text-success me-2"></i> ${student}
                                </li>`;
                        });
                    }
                })
                .catch(error => {
                    console.error(error);
                    list.innerHTML = `<li class="list-group-item text-danger text-center">Failed to load data.</li>`;
                });
        }
    </script>
}