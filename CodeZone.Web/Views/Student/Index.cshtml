@using CodeZone.Core.Common
@using CodeZone.Core.DTOs.Students
@model PaginatedResult<StudentResponse>

@{
    ViewData ["Title"] = "Students Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">Students Management</h1>
        <p class="text-muted small">Manage your students and their enrollments</p>
    </div>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle-fill me-2"></i>Add New Student
    </a>
</div>

@if ( TempData ["SuccessMessage"] != null )
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> 
        <span>@(TempData ["SuccessMessage"])</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm mb-4 border-0">
    <div class="card-body p-3">
        <form asp-action="Index" method="get" class="row g-2 align-items-center">
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-text bg-white text-muted border-end-0"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" class="form-control border-start-0 ps-0"
                           placeholder="Search by Name, Email, or National ID..."
                           value="@ViewBag.CurrentSearch">
                </div>
            </div>
            <div class="col-md-2 d-grid gap-2 d-md-block">
                <button class="btn btn-primary w-100" type="submit">Search</button>
            </div>

            @if ( !string.IsNullOrEmpty( ViewBag.CurrentSearch ) )
            {
                <div class="col-12 text-end">
                    <a asp-action="Index" class="text-decoration-none text-muted small"><i class="bi bi-x-circle"></i> Clear Search</a>
                </div>
            }
        </form>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-secondary">
                    <tr>
                        <th class="ps-4">Full Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>National ID</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if ( Model != null && Model.Data.Any( ) )
                    {
                        foreach ( var student in Model.Data )
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@student.FullName</td>
                                <td><a href="mailto:@student.Email" class="text-decoration-none">@student.Email</a></td>
                                <td>@student.PhoneNumber</td>
                                <td><span class="badge bg-light text-dark border">@student.NationalId</span></td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <button onclick="loadCourses(@student.Id, '@student.FullName')"
                                                class="btn btn-sm btn-outline-info"
                                                data-bs-toggle="modal"
                                                data-bs-target="#coursesModal"
                                                title="View Enrolled Courses">
                                            <i class="bi bi-eye">View Enrolled Courses</i>
                                        </button>

                                        <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-outline-warning" title="Edit">
                                            <i class="bi bi-pencil-square">Edit</i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@student.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to delete this student?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger rounded-end" title="Delete">
                                                <i class="bi bi-trash">Delete</i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-5">
                                <i class="bi bi-inbox fs-1 d-block mb-3 opacity-50"></i>
                                <span>No students found matching your criteria.</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if ( Model != null && Model.TotalPages > 1 )
    {
        <div class="card-footer bg-white py-3">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center mb-0">
                    <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index"
                           asp-route-page="@(Model.CurrentPage - 1)"
                           asp-route-search="@ViewBag.CurrentSearch">
                            <i class="bi bi-chevron-left me-1"></i> Prev
                        </a>
                    </li>

                    <li class="page-item disabled">
                        <span class="page-link border-0 fw-bold text-dark">
                            Page @Model.CurrentPage of @Model.TotalPages
                        </span>
                    </li>

                    <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                        <a class="page-link border-0" asp-action="Index"
                           asp-route-page="@(Model.CurrentPage + 1)"
                           asp-route-search="@ViewBag.CurrentSearch">
                            Next <i class="bi bi-chevron-right ms-1"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

<div class="modal fade" id="coursesModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title"><i class="bi bi-book-half me-2"></i> Courses for <span id="studentNameTitle" class="fw-bold"></span></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <ul id="coursesList" class="list-group list-group-flush">
                    <li class="list-group-item text-center py-4">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary btn-sm px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadCourses(studentId, studentName) {
            document.getElementById('studentNameTitle').innerText = studentName          
            var list = document.getElementById('coursesList');
            list.innerHTML = `
                <li class="list-group-item text-center py-4">
                    <div class="spinner-border text-primary spinner-border-sm" role="status"></div>
                    <span class="ms-2 text-muted">Fetching courses...</span>
                </li>`;

            fetch(`/Student/GetCourses/${studentId}`)
                .then(response => {
                    if (!response.ok) throw new Error("Network response was not ok");
                    return response.json();
                })
                .then(data => {
                    list.innerHTML = ''; 

                    if (data.length === 0) {
                        list.innerHTML = `
                            <li class="list-group-item text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle d-block fs-4 mb-2 opacity-50"></i>
                                Not enrolled in any courses yet.
                            </li>`;
                    } else {
                        data.forEach(course => {
                            list.innerHTML += `
                                <li class="list-group-item d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-success me-3"></i>
                                    <span class="fw-500">${course}</span>
                                </li>`;
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    list.innerHTML = `
                        <li class="list-group-item text-center text-danger py-3">
                            <i class="bi bi-x-circle me-1"></i> Failed to load courses.
                        </li>`;
                });
        }
    </script>
}